            <param name="odom_frame_id" value="$(arg robot_namespace)/odom"/>
            <param name="base_frame_id" value="$(arg robot_namespace)/base_footprint"/>

            <!-- Use the single map server -->
            <remap from="static_map" to="/static_map"/>
        </node>
    </group>

